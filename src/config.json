{
  "baseURL": "https://rewards.bing.com",
  "sessionPath": "sessions",

  // ========== YOUR / PRESERVED SETTINGS ==========
  "browser": {
    "headless": true,
    "globalTimeout": "100s"
  },

  "fingerprinting": {
    "saveFingerprint": {
      "mobile": false,
      "desktop": false
    }
  },

  "execution": {
    "parallel": false,
    "runOnZeroPoints": false,
    "clusters": 3,
    "passesPerRun": 1
  },

  "passesPerRun": 1,

  "buyMode": {
    "maxMinutes": 45
  },

  "workers": {
    "doDailySet": true,
    "doMorePromotions": true,
    "doPunchCards": true,
    "doDesktopSearch": true,
    "doMobileSearch": true,
    "doDailyCheckIn": true,
    "doReadToEarn": true,
    "bundleDailySetWithSearch": false
  },

  "search": {
    "useLocalQueries": false,
    "settings": {
      "useGeoLocaleQueries": false,
      "scrollRandomResults": true,
      "clickRandomResults": true,
      "retryMobileSearchAmount": 2,
      "delay": {
        "min": "3min",
        "max": "5min"
      }
    }
  },

  "searchOnBingLocalQueries": false,

  "proxy": {
    "proxyGoogleTrends": true,
    "proxyBingTerms": true
  },

  // Top-level (legacy) webhook kept for backward compatibility; prefer notifications.webhook
  "webhook": {
    "enabled": false,
    "url": ""
  },

  // Notifications (newer/nested)
  "notifications": {
    "webhook": {
      "enabled": false,
      "url": "",
      "username": "Live Logs",
      "avatarUrl": "https://media.discordapp.net/attachments/1421163952972369931/1421929950377939125/Gc.png"
    },
    "conclusionWebhook": {
      "enabled": false,
      "url": "",
      "username": "Microsoft Rewards",
      "avatarUrl": "https://media.discordapp.net/attachments/1421163952972369931/1421929950377939125/Gc.png"
    },
    "ntfy": {
      "enabled": false,
      "url": "",
      "topic": "rewards",
      "authToken": ""
    }
  },

  // Keep legacy arrays for exclude lists (preserve your values)
  "logExcludeFunc": [
    "SEARCH-CLOSE-TABS"
  ],
  "webhookLogExcludeFunc": [
    "SEARCH-CLOSE-TABS"
  ],

  "logging": {
    "excludeFunc": [
      "SEARCH-CLOSE-TABS",
      "LOGIN-NO-PROMPT",
      "FLOW"
    ],
    "webhookExcludeFunc": [
      "SEARCH-CLOSE-TABS",
      "LOGIN-NO-PROMPT",
      "FLOW"
    ],
    "live": {
      "enabled": false,
      "redactEmails": true
    },
    // top-level compact redact flag also supported by logger
    "redactEmails": true
  },

  "diagnostics": {
    "enabled": true,
    "saveScreenshot": true,
    "saveHtml": true,
    "maxPerRun": 2,
    "retentionDays": 7
  },

  "jobState": {
    "enabled": false,
    "dir": ""
  },

  "retryPolicy": {
    "maxAttempts": 3,
    "baseDelay": 1000,
    "maxDelay": "30s",
    "multiplier": 2,
    "jitter": 0.2
  },

  "humanization": {
    "enabled": true,
    "stopOnBan": true,
    "immediateBanAlert": true,
    "actionDelay": {
      "min": 150,
      "max": 450
    },
    "gestureMoveProb": 0.4,
    "gestureScrollProb": 0.2,
    "allowedWindows": []
  },

  "vacation": {
    "enabled": false,
    "minDays": 3,
    "maxDays": 5
  },

  "humanSkip": {
    "enabled": false
  },

  "schedule": {
    "enabled": false,
    "useAmPm": false,
    "time12": "9:00 AM",
    "time24": "09:00",
    "timeZone": "America/New_York",
    "runImmediatelyOnStart": false
  },

  "update": {
    "git": true,
    "docker": false,
    "scriptPath": "setup/update/update.mjs",
    "autoUpdateConfig": true,
    "autoUpdateAccounts": true
  },

  "shuffleAccounts": true,
  "accountStartDelayMinMs": 2000,
  "accountStartDelayMaxMs": 6000,
  "accountFinishDelayMinMs": 1000,
  "accountFinishDelayMaxMs": 3000,
  "perAccountPageDelayMs": 300,

  "gmailNavWaitMs": 2500,
  "gmailSearchRetries": 3,
  "gmailSearchDelayMs": 1200,
  "passwordFillDelayMs": 600,

  // ========== NEW FEATURES / FIELDS FROM MAIN (sensible defaults) ==========
  "dryRun": false,

  "queryDiversity": {
    "enabled": true,
    "sources": ["google-trends", "reddit", "local-fallback"],
    "maxQueriesPerSource": 10,
    "cacheMinutes": 30
  },

  "riskManagement": {
    "enabled": true,
    "autoAdjustDelays": true,
    "stopOnCritical": false,
    "banPrediction": true,
    "riskThreshold": 75
  },

  "analytics": {
    "enabled": true,
    "retentionDays": 30,
    "exportMarkdown": true,
    "webhookSummary": true
  },

  // Keep compatibility with both old "proxy" and new nested proxy options
  "proxySettings": {
    "proxyGoogleTrends": true,
    "proxyBingTerms": true
  },

  // Additional optional fields (defaults from main)
  "diagnosticsSettings": {
    "enabled": true
  },

  // Keep the older flat keys if any legacy code references them
  "baseTimeout": "100s"
}
